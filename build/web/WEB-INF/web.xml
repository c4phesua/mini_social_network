<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <resource-ref>
        <description>
            Connection pool
        </description>
        <res-ref-name>
            jdbc/MiniSociety
        </res-ref-name>
        <res-type>
            javax.sql.DataSource
        </res-type>
        <res-auth>
            Container
        </res-auth>
    </resource-ref>
    <servlet>
        <servlet-name>MainController</servlet-name>
        <servlet-class>controllers.MainController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainController</servlet-name>
        <url-pattern>/MainController</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controllers.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RegisterController</servlet-name>
        <servlet-class>controllers.RegisterController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>controllers.LogoutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>PostController</servlet-name>
        <servlet-class>controllers.PostController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PostController</servlet-name>
        <url-pattern>/post</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>MainFilter</filter-name>
        <filter-class>filters.MainFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>MainFilter</filter-name>
        <url-pattern>/index.jsp</url-pattern>
        <url-pattern>/home.jsp</url-pattern>
        <url-pattern>/searching</url-pattern>
        <url-pattern>/profile.jsp</url-pattern>
        <url-pattern>/logout</url-pattern>
        <url-pattern>/post</url-pattern>
        <url-pattern>/cmt</url-pattern>
        <url-pattern>/detail</url-pattern>
        <url-pattern>/emo</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>controllers.HomeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/homeController</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>PostDetail</servlet-name>
        <servlet-class>controllers.PostDetail</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PostDetail</servlet-name>
        <url-pattern>/detail</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CommentController</servlet-name>
        <servlet-class>controllers.CommentController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CommentController</servlet-name>
        <url-pattern>/cmt</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EmotionController</servlet-name>
        <servlet-class>controllers.EmotionController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmotionController</servlet-name>
        <url-pattern>/emo</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteController</servlet-name>
        <servlet-class>controllers.DeleteController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteController</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SearchController</servlet-name>
        <servlet-class>controllers.SearchController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchController</servlet-name>
        <url-pattern>/searching</url-pattern>
    </servlet-mapping>
</web-app>
